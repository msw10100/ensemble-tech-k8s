# Environment variables for chorus-deployment
# Copy this file to .env and fill in your actual values

# GitHub Personal Access Token (for ArgoCD repository access)
GH_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE

# Cloudflare API Token (for DNS-01 challenges)  
CLOUDFLARE_API_TOKEN=YOUR_CLOUDFLARE_API_TOKEN_HERE

# PostgreSQL Credentials
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=strongpassword
POSTGRES_DATABASE=postgres

# Redis Configuration (no authentication by default)
REDIS_PASSWORD=

# RabbitMQ Credentials
RABBITMQ_USERNAME=rabbitmq
RABBITMQ_PASSWORD=strongpassword

# MinIO S3 Storage Credentials
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=strongpassword

# GCP Project Configuration
GCP_PROJECT_ID=$(gcloud config get-value project)
GCP_ZONE=us-central1-a
GCP_MACHINE_TYPE=n2-standard-4

# Talos/Omni Configuration
CLUSTER_NAME=talos-ipv6-cluster
OMNI_CONTEXT=default-1

# Domain Configuration
DOMAIN=ensembletechnologies.xyz
SUBDOMAIN=www

# Let's Encrypt Configuration (staging vs production)
LETSENCRYPT_ENVIRONMENT=staging  # or 'production'